---
import Text from "@/components/ui/text.astro";
import Icon, { type LucideIconName } from "@/components/ui/icon.astro";
import Link from "@/components/ui/link.astro";

const navigationItems = [
  {
    name: "FORUMS",
    href: "/forums",
    icon: "MessageSquare",
    active: true,
  },
  {
    name: "CLUBS",
    href: "/clubs",
    icon: "Users",
  },
  {
    name: "BLOGS",
    href: "/v2/blog",
    icon: "FileText",
  },
  {
    name: "ACTIVITY",
    href: "/activity",
    icon: "Activity",
    hasDropdown: true,
  },
];
---

<header
  class="w-full not-md:hidden border-b bg-card/95 backdrop-blur supports-[backdrop-filter]:bg-card/60"
>
  <!-- Main Navigation Bar -->
  <div class="bg-background/50 border-b">
    <div class="container mx-auto px-4">
      <div class="flex items-center justify-between h-14">
        <!-- Left Navigation -->
        <nav class="flex items-center space-x-1">
          {
            navigationItems.map((item) => (
              <a
                href={item.href}
                class={`flex items-center gap-2 px-4 py-2 text-sm font-medium transition-colors rounded-md hover:bg-accent hover:text-accent-foreground ${
                  item.active
                    ? "bg-primary text-primary-foreground"
                    : "text-muted-foreground"
                }`}
              >
                <Icon name={item.icon as LucideIconName} size="sm" />
                <Text size="sm" weight="medium">
                  {item.name}
                </Text>
                {item.hasDropdown && <Icon name="ChevronDown" size="sm" />}
              </a>
            ))
          }
        </nav>

        <!-- Right Auth Section -->
        <div class="flex items-center gap-3">
          <div class="flex items-center gap-2 text-sm text-muted-foreground">
            <Text size="sm">Existing user? Sign In</Text>
            <Icon name="ChevronDown" size="sm" />
          </div>

          <button
            class="bg-primary text-primary-foreground hover:bg-primary/90 px-4 py-2 rounded-md text-sm font-medium transition-colors"
          >
            Sign Up
          </button>

          <!-- Theme Toggle -->
          <button
            class="p-2 rounded-md hover:bg-accent hover:text-accent-foreground transition-colors"
          >
            <Icon name="Sun" size="sm" class="text-muted-foreground" />
          </button>
        </div>
      </div>
    </div>
  </div>

  <!-- Breadcrumb/Secondary Navigation -->
  <div class="bg-muted/30">
    <div class="container mx-auto px-4">
      <div class="flex items-center justify-between h-12">
        <!-- Breadcrumb -->
        <nav class="flex items-center space-x-2 text-sm">
          <Link href="/" class="text-muted-foreground hover:text-foreground">
            Home
          </Link>
        </nav>

        <!-- Secondary Actions -->
        <div class="flex items-center gap-2">
          <Link
            href="/activity"
            class="flex items-center gap-1 text-sm text-muted-foreground hover:text-foreground"
          >
            <Icon name="Activity" size="sm" />
            <Text size="sm">All Activity</Text>
          </Link>
        </div>
      </div>
    </div>
  </div>
</header>
