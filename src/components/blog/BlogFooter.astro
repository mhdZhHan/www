---
import Toast from "@/components/common/Toast.astro";
import Icon from "@/components/ui/icon.astro";
---

<>
  <ul class="action-buttons">
    <li title="Copy the link of this article">
      <button id="copy" class="action-button" aria-label="Share this article">
        <Icon name="share-2" size="sm" /> Share this article
      </button>
    </li>
    <li>
      <a
        href={`https://github.com/mhdZhHan/personal-blog/tree/main/src/content${Astro.url.pathname}.mdx`}
        class="action-link"
        target="_blank"
        aria-label="Edit this content on GitHub"
      >
        Typo? Edit it here <Icon name="file-pen-line" size="sm" />
      </a>
    </li>
  </ul>

  <Toast
    Icon="share-2"
    description="Link copied to clipboard."
    idList="toast-share"
  />
</>

<style lang="scss">
  html[data-theme="cool"] {
    .action-buttons li {
      button,
      a {
        &:hover {
          color: rgb(9 9 11 / 1);
        }
      }
    }
  }

  .action-buttons {
    margin-top: 1rem;
    display: flex;
    align-items: center;
    justify-content: space-between;

    li {
      list-style: none;
      button,
      a {
        display: flex;
        align-items: center;
        cursor: pointer;
        background: inherit;
        border: none;
        outline: none;
        gap: 0.25rem;

        transition: all 0.15s cubic-bezier(0.4, 0, 0.2, 1);
        &:hover {
          color: rgb(250 250 250 / 1);
        }
      }
    }
  }
</style>

<script>
  document.addEventListener("astro:page-load", () => {
    const copyButton = document.getElementById("copy");
    const toastElement = document.getElementById("toast-share");

    if (copyButton && toastElement) {
      copyButton.addEventListener("click", function () {
        const copyText = window.location.href;

        navigator.clipboard
          .writeText(copyText)
          .then(() => {
            toastElement.classList.remove("hidden");
            setTimeout(() => {
              toastElement.classList.add("hidden");
            }, 2500);
          })
          .catch((err) => {
            console.error("Failed to copy text: ", err);
          });
      });
    } else {
      console.error("Copy button or toast element not found");
    }
  });
</script>
