---
import type { HTMLTag, Polymorphic } from "astro/types";
import { twMerge } from "tailwind-merge";

type Props<Tag extends HTMLTag = "div"> = Polymorphic<{ as: Tag }>;

const { as: Tag = "div", class: className, ...props } = Astro.props;
---

<Tag
  {...props}
  class={twMerge(
    "rounded-border bg-card/50 flex h-full flex-col p-4 shadow-lg",
    "inset-shadow-accent-9/20 border-border focusable inset-shadow-sm",
    className,
  )}
>
  <slot />
</Tag>
