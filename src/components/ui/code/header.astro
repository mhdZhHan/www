---
import type { HTMLAttributes } from "astro/types";
import { twMerge } from "tailwind-merge";

type Props = HTMLAttributes<"figcaption">;

const { class: className, ...props } = Astro.props;
---

<figcaption
  {...props}
  class={twMerge(
    "bg-muted text-muted-foreground border-border rounded-t border-b px-4 py-1.5 text-xs",
    className,
  )}
>
  <slot />
</figcaption>
