---
import Button, { buttonVariants } from "@/components/ui/button.astro";
import Link from "@/components/ui/link.astro";
import * as NavigationMenu from "@/components/ui/navigation-menu";
import Text from "@/components/ui/text.astro";
import Theme from "@/components/ui/theme.astro";
import "@/global.css";
import { ThemeScript } from "astro-theme-toggle";
import type { HTMLAttributes } from "astro/types";
import { Font } from "astro:assets";
import * as env from "astro:env/server";
import { ClientRouter } from "astro:transitions";

type Props = HTMLAttributes<"main"> & {
  title?: string;
  description?: string;
  og?: string;
};

const {
  title = "Mohammed's blog",
  description = `Live a life you can be proud`,
  og = "og.png",
  class: className,
  ...props
} = Astro.props;
---

<html
  lang="en"
  class="scrollbar scroll-progress-root selection:bg-accent-5 scroll-pt-24 antialiased [scrollbar-gutter:stable]"
>
  <head>
    <title>{title}</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="title" content={title} />
    <meta name="description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta
      property="og:site_name"
      content={String(Astro.site).replace(/\/+$/, "")}
    />
    <meta property="og:url" content={new URL(og, Astro.site)} />
    <meta property="og:image" content={new URL(og, Astro.site)} />
    <meta property="og:image:alt" content={title} />
    <meta property="og:image:width" content="1280" />
    <meta property="og:image:height" content="675" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:creator" content={`@${env.USERNAME}`} />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={new URL(og, Astro.site)} />
    <link rel="icon" type="image/svg+xml" href="/favicon.png" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <link
      href={String(new URL(Astro.url.pathname, Astro.site)).replace(/\/+$/, "")}
      rel="canonical"
    />

    <script
      is:inline
      set:text="window.pagefind = await import('/pagefind/pagefind.js')"
      type="module"
    />
    <script
      is:inline
      set:text="document.documentElement.classList.add('[&_[x-cloak]]:hidden')"
    />
    <Font cssVariable="--font-sans" preload />
    <ThemeScript />
    <ClientRouter />
  </head>
  <body
    class="from-gray-1 to-background text-gray-12 flex min-h-dvh flex-col bg-gradient-to-t bg-fixed"
  >
    <header class="bg-background border-gray-6 sticky top-0 z-50 h-12 border-b">
      <div
        class="mx-auto flex size-full max-w-4xl items-center px-6 *:first:mr-auto"
      >
        <Link
          href="/"
          icon="Home"
          aria-label="Home"
          class={buttonVariants({ variant: "ghost", size: "icon" })}
        />
        <NavigationMenu.Root>
          <NavigationMenu.Link href="/blog">Blog</NavigationMenu.Link>
          <NavigationMenu.Dropdown>
            <NavigationMenu.DropdownTrigger
              >Socials</NavigationMenu.DropdownTrigger
            >
          </NavigationMenu.Dropdown>
        </NavigationMenu.Root>
        <Theme />
        <Link
          href="/rss.xml"
          icon="Rss"
          aria-label="RSS"
          class={buttonVariants({ variant: "ghost", size: "icon" })}
        />
      </div>
    </header>

    <main {...props} class:list={["flex-1", className]}><slot /></main>

    <footer
      class="mx-auto flex h-12 w-full max-w-4xl items-center px-6 *:first:mr-auto *:first:pr-6"
    >
      <Text size="2"
        >Â©{new Date().getFullYear()} Mohammed's blog - All Rights Reserved</Text
      >
      <NavigationMenu.Root>
        <NavigationMenu.Link href="/">Home</NavigationMenu.Link>
        <NavigationMenu.Link href="/blog">Blog</NavigationMenu.Link>
      </NavigationMenu.Root>
      <Button
        x-data
        variant="ghost"
        size="icon"
        icon="ArrowUp"
        aria-label="Back to top"
        @click="window.scrollTo({ top: 0 })"
      />
    </footer>
  </body>
</html>
